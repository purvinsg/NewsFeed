{% extends 'layout.twig' %}
{% block content %}
    <div class="container my-24 px-6 mx-auto">
        <section class="mb-32 text-gray-800">
            <div class="block rounded-lg shadow-lg bg-white">
                <div class="flex flex-wrap items-center">
                    <div class="hidden lg:flex grow-0 shrink-0 basis-auto lg:w-6/12 xl:w-4/12">
                        <img src="{{ article.imageUrl }}" alt="Placeholder picture"
                             class="w-full rounded-t-lg lg:rounded-tr-none lg:rounded-bl-lg"/>
                    </div>
                    <div class="grow-0 shrink-0 basis-auto w-full lg:w-6/12 xl:w-8/12">
                        <div class="px-6 py-12 md:px-12">
                            <h2 class="text-2xl font-bold mb-4">{{ article.title }}</h2>

                            <p class="text-gray-500 mb-6">
                                {{ article.body }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="mb-32 text-gray-800">
            <h5 class="text-xl font-semibold text-center mb-10 md:mb-6">Comments: {{ comments|length }}</h5>

            {% for comment in comments %}
                <div class="flex flex-wrap mb-12 md:mb-0 mt-3">
                    <div class="grow-0 shrink-0 basis-auto ">
                        <img src="https://placehold.co/50x50/black/white?text=Profile+Pic"
                             class="w-full shadow-lg rounded-lg mb-6"
                             alt=""/>
                    </div>

                    <div class="grow-0 shrink-0 basis-auto w-10/12 pl-4 md:pl-6 mt-3">

                        <p class="font-semibold mb-3">{{ comment.name }}</p>
                        <p>
                            {{ comment.body }}

                        </p>
                        <p class="text-gray-500 mb-6">
                            <small>Published by {{ comment.email }}</small>
                        </p>
                    </div>
                </div>
            {% endfor %}
        </section>
    </div>
{% endblock %}